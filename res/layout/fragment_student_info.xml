<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:id="@+id/fragment_student_info" xmlns:app="http://schemas.android.com/apk/res/cz.cvut.fit.palicand.akos">

    <cz.cvut.fit.palicand.akos.views.PairedTextView
        android:id="@+id/student_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/student_info_name_label"
        app:textSize="20sp">
    </cz.cvut.fit.palicand.akos.views.PairedTextView>
    <cz.cvut.fit.palicand.akos.views.PairedTextView
        android:id="@+id/student_info_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/student_info_username_label"
        android:layout_below="@id/student_info_name">
    </cz.cvut.fit.palicand.akos.views.PairedTextView>
    <cz.cvut.fit.palicand.akos.views.PairedTextView
        android:id="@+id/student_info_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/student_info_email_label"
        android:layout_below="@id/student_info_username">
    </cz.cvut.fit.palicand.akos.views.PairedTextView>

    <cz.cvut.fit.palicand.akos.views.PairedTextView
            android:id="@+id/student_info_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/student_info_order_label"
            android:layout_below="@id/student_info_email">
    </cz.cvut.fit.palicand.akos.views.PairedTextView>
</RelativeLayout>