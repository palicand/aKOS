<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_courses"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
        android:paddingTop="10dp">
    <TextView
        android:text="@string/courses_semester_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/courses_semester_label"
        android:textSize="20sp"
        android:gravity="center"
            android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/semesters"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/courses_semester_label"
     >

    </Spinner>
    <ListView 
        android:id="@+id/list_courses"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_below="@id/semesters"/>
</RelativeLayout>